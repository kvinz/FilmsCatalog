@model FilmsCatalog.Models.Film.FilmCatalogVM
@{
    ViewData["Title"] = "Каталог фильмов";
}

<h2>Каталог фильмов</h2>

<div class="row" style="margin-bottom:20px; margin-top:20px;">
    <input type="submit" class="btn btn-success btn-sm" value="Добавить фильм" />
</div>

<div class="row"></div>

<div class="row">
    <table class="table" style="margin-bottom:0px;">
        <thead>
            <tr>
                <th>Название</th>
                <th class="text-center" style="width: 100px;">Действия</th>
            </tr>
        </thead>
        <tbody>
            @{ foreach (var item in Model.Films)
                {
                    <tr>
                        <td scope="row">
                            @item.Name
                        </td>
                        <td class="text-center">
                            <div class="row">
                                <div class="col-md-4 col-md-offset-1 col-sm-2">
                                    <button type="submit" class="btn btn-success btn-sm" data-toggle="tooltip" title="Изменить"> Изменить </button>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
